FROM node:22-slim

RUN apt-get update && apt-get install -y \
    git \
    curl \
    unzip \
    procps \
    iproute2 \
    tmux \
    && rm -rf /var/lib/apt/lists/*

# Install Bun
RUN curl -fsSL https://bun.sh/install | bash
ENV PATH="/root/.bun/bin:$PATH"

WORKDIR /workspace

CMD ["sleep", "infinity"]
